./clean

mkdir ../docs
mkdir tmp
mkdir dat
mkdir dat/bin
mkdir dat/png
mkdir dat/json_random
mkdir dat/retop
mkdir dat/svg
mkdir dat/tiled
mkdir dat/tiled/0
mkdir dat/tiled/1
mkdir dat/tiled/2
mkdir dat/tiled/3
mkdir dat/tiled/4

for fn in res/json/*.json
do
	./retop $fn &
done
wait

for fn in res/json/*.json
do
	echo "processing $fn"
	./json2png -noGridLines $fn &
	echo AAAA ./json2svg -noGridLines $fn
	./json2svg -noGridLines $fn &
	./json2tiledpng 0 $fn &
	./json2tiledpng 1 $fn &
	./json2tiledpng 2 $fn &
	./json2tiledpng 3 $fn &
	./json2tiledpng 4 $fn &
	./json2bin $fn &
	./randomizejson $fn &
done
wait

for fn in dat/retop/*.json
do
	echo "processing $fn"  &
	./json2png -diagonals -selectiveGridLines $fn  &
	./json2svg -diagonals -selectiveGridLines $fn &
	./json2tiledpng -noLines 0 $fn &
	./json2tiledpng -noLines 1 $fn &
	./json2tiledpng -noLines 2 $fn &
	./json2tiledpng -noLines 3 $fn &
	./json2tiledpng -noLines 4 $fn &
	./json2bin $fn &
done
wait

for fn in res/json_random/*.json
do
	echo "processing $fn"  &
	./json2png -diagonals -noGridLines $fn  &
	./json2svg -diagonals -noGridLines $fn &
	./json2tiledpng -noLines 0 $fn &
	./json2tiledpng -noLines 1 $fn &
	./json2tiledpng -noLines 2 $fn &
	./json2tiledpng -noLines 3 $fn &
	./json2tiledpng -noLines 4 $fn &
	./json2bin $fn &
done
wait

for fn in dat/svg/*.svg
do
	svgo $fn $fn &
done
wait


./testbin
./gensite